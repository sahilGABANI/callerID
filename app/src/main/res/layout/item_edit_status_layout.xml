<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lytmain2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/_5sdp"
    android:foreground="@drawable/ripple_background_lite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgColor"
            android:layout_width="@dimen/_10sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/green_circle_shape"/>
        <TextView
            android:id="@+id/txtStatusName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status 1"
            android:layout_marginLeft="@dimen/_5sdp"
            android:fontFamily="@font/gilroy_medium"
            android:textColor="@color/black"
            android:padding="@dimen/_5sdp"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/list_color"/>
</LinearLayout>